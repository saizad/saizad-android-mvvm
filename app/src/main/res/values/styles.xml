<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen.Launch">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AuthTheme" parent="FullScreen.AppLaunch">
        <item name="navGraph">@navigation/auth_nav</item>
    </style>

    <style name="MainTheme" parent="AppTheme.NoActionBar">
        <item name="navGraph">@navigation/main_nav</item>
    </style>

</resources>
